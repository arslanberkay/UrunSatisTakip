@model Musteri

<h2> Müşteri Ekleme</h2>

<form asp-action="Create" method="post" class="form-group">
	<div class="form-group">
		<label asp-for="Ad">Ad</label>
		<input asp-for="Ad" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Soyad">Soyad</label>
		<input asp-for="Soyad" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Eposta">Eposta</label>
		<input asp-for="Eposta" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Müşteri Ekle</button>
</form>

