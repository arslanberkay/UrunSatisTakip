@model Urun

<h2>Ürün Güncelleme</h2>
<form asp-action="Edit" method="post" class="form-group">
	<input asp-for="Id" type="hidden"/>
	<div class="form-group">
		<label asp-for="Ad">Ürün Ad</label>
		<input asp-for="Ad" class="form-control" />
		<span asp-validation-for="Ad" class="text-danger"></span>
	</div>
	<div class="form-group">
		<select asp-for="KategoriId" asp-items="ViewBag.Kategoriler" class="form-control"> </select>
		
	</div>
	<div class="form-group">
		<label asp-for="Fiyat">Fiyat</label>
		<input asp-for="Fiyat" class="form-control" />
	</div>

	<button type="submit" class="btn btn-success">Güncelle</button>

</form>
