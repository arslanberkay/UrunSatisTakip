@model Urun

<form asp-action="Create" method="post" class="form-group">
	<div class="form-group">
		<label asp-for="Ad">Ad</label>
		<input asp-for="Ad" class="form-control" />
		<span asp-validation-for="Ad" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="KategoriId">Kategori</label>
		<select asp-for="KategoriId" asp-items="ViewBag.Kategoriler " class="form-control">
			<option value="">Seçiniz</option>
		</select>
		<span asp-validation-for="KategoriId" class="text-danger"></span>

	</div>
	<div class="form-group">
		<label asp-for="Fiyat">Fiyat</label>
		<input asp-for="Fiyat" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Ürün Ekle</button>
</form>

